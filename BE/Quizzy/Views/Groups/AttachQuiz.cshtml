@model BL.Group

@{
    ViewBag.Title = "AttachQuiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Назначить тест</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Назначить тест группе - @Model.GroupName</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.GroupName)
        @Html.HiddenFor(model => model.IsDeleted)
        @Html.HiddenFor(model => model.IsModified)
        @Html.HiddenFor(model => model.ClientId)

    </div>

    <div class="form-group">
        <dl>
            <dt>Группа</dt>
            <dd>@Html.LabelFor(model => model.GroupName, htmlAttributes: new { @class = "control-label col-md-2" })</dd>

            <dt>Назначить тест</dt>
            
            <dd>
            @Html.DropDownList("ddlist", ViewBag.Quizs as SelectList)</dd>
        </dl>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Назначить" class="btn btn-default" />
        </div>
    </div>
}


<div>
    @Html.ActionLink("Вернуться к списку", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

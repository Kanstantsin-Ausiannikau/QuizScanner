@model IEnumerable<BL.Quiz>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Все тесты</h2>


<table class="table">
    <tr>
        <th>
          <!--  @Html.DisplayNameFor(model => model.ClientId) -->
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
           <!-- @Html.DisplayNameFor(model => model.AnswerText)-->
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuizNumber)
        </th>
        <th>
            <!--@Html.DisplayNameFor(model => model.QuizVersion)-->
        </th>
        <th>
          <!--  @Html.DisplayNameFor(model => model.IsModified)-->
        </th>
        <th>
           <!-- @Html.DisplayNameFor(model => model.IsDeleted)-->
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.HiddenFor(modelItem => item.ClientId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.HiddenFor(modelItem => item.AnswerText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuizNumber)
        </td>
        <td>
            @Html.HiddenFor(modelItem => item.QuizVersion)
        </td>
        <td>
            @Html.HiddenFor(modelItem => item.IsModified)
        </td>
        <td>
            @Html.HiddenFor(modelItem => item.IsDeleted)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }) |
           <!-- @Html.ActionLink("Детали", "Details", new { id=item.Id }) |-->
            @Html.ActionLink("Удалить", "Delete", new { id = item.Id }) |
            @Html.ActionLink("Создать random-копию", "Random", new { id = item.Id }) |
            @Html.ActionLink("Скачать pdf", "GetPdfFile", new { id = item.Id })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Добавить тест", "Create") |
    @Html.ActionLink("Импортировать тест из Excel", "Import")
</p>

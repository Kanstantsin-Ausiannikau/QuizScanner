            var i = 0;
            $('.addLink').click(function () {
                i++;
                var html2Add = "<div class=\"questionItem col-md-offset-2 col-md-10\">\n<h4>Вопрос №"+(i+1)+"<\/h4>\n<div class=\"row\">\n<div class=\"col-md-8\">\n<label>Сложность вопроса<\/label>\n<input type=\"text\" id=\"Questions["+i+"].Difficulty\" name=\"Questions["+i+"].Difficulty\" value=\"1\" \/>\n<br \/>\n<label>Текст вопроса<\/label>\n<textarea class=\"form-control\" style=\"min-width: 100%;height:180px\" type=\'text\' name=\'Questions["+i+"].QuestionText\'><\/textarea>\n<br \/>\n<label>Ответы (правильные - отметить)<\/label>\n<br \/>\n<p>\n<input id=\"Questions["+i+"].Answers[0].RightAnswer\" name=\"Questions["+i+"].Answers[0].RightAnswer\" type=\"checkbox\" value=\"true\" unchecked \/>\n<textarea class=\"form-control\" style=\"min-width: 100%\" type=\"text\" id=\"Questions["+i+"].Answers[0].Answer\" name=\"Questions["+i+"].Answers[0].Answer\"><\/textarea>\n<\/p>\n<p>\n<input id=\"Questions["+i+"].Answers[1].RightAnswer\" name=\"Questions["+i+"].Answers[1].RightAnswer\" type=\"checkbox\" value=\"true\" unchecked \/>\n<textarea class=\"form-control\" style=\"min-width: 100%\" type=\"text\" id=\"Questions["+i+"].Answers[1].Answer\" name=\"Questions["+i+"].Answers[1].Answer\"><\/textarea>\n<\/p>\n<p>\n<input id=\"Questions["+i+"].Answers[2].RightAnswer\" name=\"Questions["+i+"].Answers[2].RightAnswer\" type=\"checkbox\" value=\"true\" unchecked \/>\n<textarea class=\"form-control\" style=\"min-width: 100%\" type=\"text\" id=\"Questions["+i+"].Answers[2].Answer\" name=\"Questions["+i+"].Answers[2].Answer\"><\/textarea>\n<\/p>\n<p>\n<input id=\"Questions["+i+"].Answers[3].RightAnswer\" name=\"Questions["+i+"].Answers[3].RightAnswer\" type=\"checkbox\" value=\"true\" unchecked \/>\n<textarea class=\"form-control\" style=\"min-width: 100%\" type=\"text\" id=\"Questions["+i+"].Answers[3].Answer\" name=\"Questions["+i+"].Answers[3].Answer\"><\/textarea>\n<\/p>\n<p>\n<input id=\"Questions["+i+"].Answers[4].RightAnswer\" name=\"Questions["+i+"].Answers[4].RightAns
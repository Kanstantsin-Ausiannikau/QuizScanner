@model IEnumerable<Quizzy.Models.Group>

@{
    ViewBag.Title = "Группы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Добавить группу", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GroupName)
        </th>
        <th>
            Количество слушателей
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.IsModified)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDeleted)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GroupName)
        </td>
        <td>
            @Html.DisplayFor(modelItem=>item.Respondents.Count)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.IsModified)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsDeleted)
        </td>*@
        <td>
            @Html.HiddenFor(modelItem => item.IsModified)
            @Html.HiddenFor(modelItem => item.IsDeleted)


            @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Подробности", "Details", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id }) |
            @Html.ActionLink("Состав группы", "ViewRespondents", new { id=item.Id }) |
            @Html.ActionLink("Назначить тест", "AttachQuiz", new { id = item.Id })
        </td>
    </tr>
}

</table>
